<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="@dimen/pad_margin_15dp"
    app:behavior_hideable="true"
    app:behavior_peekHeight="56dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/pad_margin_15dp"
        android:layout_weight="2"
        android:text="Enter Coupon Code"
        android:textColor="#444"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/enterCoupon"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/pad_margin_5dp"
        android:background="@drawable/edt_back_border"
        android:enabled="true"
        android:maxLines="1"
        android:inputType="textCapCharacters"
        android:paddingLeft="@dimen/pad_margin_10dp"
        android:paddingRight="@dimen/pad_margin_10dp"/>

    <!--<Button-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="30dp"-->
        <!--android:background="@drawable/btn_main"-->
        <!--android:foreground="?attr/selectableItemBackground"-->
        <!--android:text="Apply"-->
        <!--android:textColor="#fff" />-->

    <Button
        android:id="@+id/apply_coupon_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_main"
        android:gravity="center"
        android:text="Apply"
        android:textColor="@color/white" />

</LinearLayout>